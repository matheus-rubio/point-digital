{% extends 'base.html.twig' %}

{% block body %}
<style>
#detalhesProduto {
    float: right;
}

</style>


<div class="container" style="width: 450px;">
    <br>
    <div class="card">
        <div id="detalhesPedido" class="d-flex justify-content-center">
            <ul style="width: 300px;" class="list-group mt-4">
                <li class="list-group-item active" aria-current="true">Numero do Pedido: {{pedido.id}}</li>
                <li class="list-group-item">Data do Pedido: {{pedido.data_pedido}}</li>
                <li class="list-group-item">Produto: {{pedido.nome_produto}}</li>
                <li class="list-group-item">Valor Total: R${{pedido.valor_total}}</li>
                <li class="list-group-item">Status: {{pedido.status}}</li>
                <br>
                <div class="d-flex justify-content-center">
                    
                    <a href="/gerenciarPedidos" class="btn btn-sm btn-primary mb-3 me-3">
                        <i class="bi bi-arrow-left"></i> 
                        Voltar
                    </a>
                    <a href="/editarPedido/{{pedido.id}}" class="btn btn-sm btn-warning mb-3">
                        <i class="bi bi-pencil"></i> 
                        Editar 
                    </a>
                </div>
                
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}

{% endblock %}
