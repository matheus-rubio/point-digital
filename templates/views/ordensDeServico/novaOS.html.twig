{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center col-md-12">
        <div style="width: 400px; margin-top: 20px;" class="card">
            <form method="POST" class="form-horizontal mx-4 my-2" method="POST" action="/cadastrarOS">
                <div class="form-group">
                    <label for="data_finalizacao" class="control-label mt-1 mb-1">Id do Cliente</label>
                        <select name="id_cliente" class="form-select" aria-label="Default select example" required>
                            {% for cliente in clientes %}
                                <option value="{{cliente.id}}">{{cliente.id}}</option>
                            {% endfor %}
                        </select>
                </div>
                <div class="form-group">
                    <label for="modelo_aparelho" class="control-label mt-1 mb-1">Modelo do Aparelho</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="modelo_aparelho">
                        </div>
                </div>
                <div class="form-group">
                    <label for="status_servico" class="control-label mt-1 mb-1">Status</label>
                    <select name="status_servico" class="form-select" aria-label="Default select example" required>
                        {% for status in status %}
                            <option value="{{status}}">{{status}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <label for="problema_identificado" class="control-label mt-1 mb-1">Problema Identificado</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" name="problema_identificado">
                        </div>
                </div>
                <div class="form-group">
                    <label for="orcamento_inicial" class="control-label mt-1 mb-1">Or√ßamento Inicial</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1">R$</span>
                            <input type="text" class="form-control" name="orcamento_inicial" required>
                        </div>
                </div>
                <br>
                <div class="d-flex justify-content-end">
                    <a href="/gerenciarOrdens" class="btn btn-sm btn-primary mb-2 me-3">
                        <i class="bi bi-arrow-left"></i> 
                        Voltar
                    </a>
                    <button type="submit" class="btn btn-sm btn-success mb-2">
                        <i class="bi bi-check"></i>
                        Gerar OS
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}