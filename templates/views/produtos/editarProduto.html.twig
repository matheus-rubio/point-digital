{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center col-md-12">
        <div style="width: 400px; margin-top: 20px;" class="card">
            <form style="margin: 20px;" method="POST" class="form-horizontal" method="POST" action="/atualizarProduto/{{idProduto}}">
                <div class="form-group">
                    <label style="margin-bottom: 3px;" for="nomeProduto" class="control-label">Nome do Produto</label>
                        <div class="col-sm-12">
                            <input id="nomeProduto" type="text" class="form-control" id="nomeProduto" name="nomeProduto" value="{{produto.nome}}" required>
                        </div>
                </div>
                <div class="form-group">
                    <label style="margin-bottom: 3px;" for="marcaProduto" class="control-label">Marca</label>
                        <div class="col-sm-12">
                            <input id="marcaProduto" type="text" placeholder="Ex: Xiaomi" class="form-control" id="marcaProduto" name="marcaProduto" value="{{produto.marca}}" required>
                        </div>
                </div>
                <div class="form-group">
                    <label style="margin-bottom: 3px;" for="valorProduto" class="control-label">Valor</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">R$</span>
                        <input type="text" class="form-control" name="valorProduto" placeholder="00,00" aria-describedby="basic-addon1" value="{{produto.preco}}" required>
                    </div>
                </div>
                <div class="form-group">
                    <label style="margin-bottom: 3px;" for="quantidadeProduto" class="control-label">Quantidade</label>
                        <div class="col-sm-12">
                            <input id="quantidadeProduto" placeholder="0" type="number" min="0" max="100" class="form-control" id="quantidadeProduto" name="quantidadeProduto" value="{{produto.qnt_estoque}}" required>
                        </div>
                </div>
                <br>
                <div id="botaoAtualizar" class="d-flex justify-content-end">
                    <button class="btn btn-sm btn-success" type="submit">
                        <i class="bi bi-check"></i>
                        Atualizar
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

<script>
    $(document).ready(function(){
        $('#quantidadeProduto').mask('000', {reverse: false});
    });
</script>

{% endblock %}