{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}

    <div class="container d-flex justify-content-center col-md-12">
        <div style="width: 400px; margin-top: 20px;" class="card">
            <form method="POST" class="form-horizontal mx-4 my-4" method="POST" action="/atualizarPedido/{{idPedido}}">
                <div class="form-group">
                    <label for="nomePedido" class="control-label mt-1 mb-1">Data do Pedido</label>
                        <div class="col-sm-12">
                            <input disabled type="text" class="form-control"  value="{{pedido.data_pedido}}" required>
                        </div>
                </div>
                <div class="form-group">
                    <label for="nomePedido" class="control-label mt-1 mb-1">Produto</label>
                        <div class="col-sm-12">
                            <select name="statusPedido" class="form-select" aria-label="Default select example" required>
                                <option value="{{pedido.status}}" selected>{{pedido.status}}</option>
                                {% for status in status %}
                                    {% if status != pedido.status %}
                                        <option value="{{status}}">{{status}}</option>
                                    {% endif %}
                                {% endfor %}
                              </select>
                        </div>
                </div>
                
                <br>

                <div class="d-flex justify-content-end">
                    <a href="/gerenciarPedidos" class="btn btn-sm btn-primary mb-3 me-3">
                        <i class="bi bi-arrow-left"></i> 
                        Voltar
                    </a>
                    <button type="submit" class="btn btn-sm btn-success mb-3">
                        <i class="bi bi-check"></i>
                        Atualizar
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

{% endblock %}