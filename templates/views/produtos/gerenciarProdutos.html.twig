{% extends 'base.html.twig' %}

{% block body %}
<style>
    #headerTabela {
        color:white;
    }
</style>

<div class="container">
    <div>
        <a style="margin: 10px 0 10px 0;" class="btn btn-success float-end" href="/novoProduto">
            <i class="bi bi-plus"></i>
            Novo Produto
        </a>
    </div>

    <table class="table">
        <thead>
          <tr id="headerTabela" class="bg-primary">
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Marca</th>
            <th scope="col">Pre√ßo</th>
            <th scope="col">Em Estoque</th>
            {% if produtos %}
            <th scope="col">Visualizar</th>
            <th scope="col">Editar</th>
            <th scope="col">Excluir</th>
            {% endif %}
          </tr>
        </thead>
        <tbody>
        {% for produto in produtos %}
            <tr>
                <th scope="row">{{produto.id}}</th>
                <td>{{produto.nome}}</td>
                <td>{{produto.marca}}</td>
                <td>{{produto.preco}}</td>
                <td>{{produto.qnt_estoque}}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="visualizarProduto/{{produto.id}}">
                        <i class="bi bi-eye-fill"></i>
                        Visualizar
                    </a>
                </td>
                <td>
                    <i class="fa fa-pencil"></i>
                    <a class="btn btn-sm btn-warning" href="editarProduto/{{produto.id}}">
                        <i class="bi bi-pencil-fill"></i>
                        Editar
                    </a>
                </td>
                <td>
                    <i class="fa fa-pencil"></i>
                    <a class="btn btn-sm btn-danger" href="excluirProduto/{{produto.id}}">
                        <i class="bi bi-trash-fill"></i>
                        Excluir
                    </a>
                </td>
            </tr>
        {% endfor %}
        
        </tbody>
      </table>
      

</div>

{% endblock %}
