{% extends 'base.html.twig' %}

{% block body %}
<style>
#detalhesProduto {
    float: right;
}

</style>


<div class="container" style="width: 450px;">
    <br>
    <div class="card">
        <div id="detalhesPedido" class="d-flex justify-content-center">
            <ul style="width: 300px;" class="list-group mt-4">
                <li class="list-group-item active" style="text-align: center;" aria-current="true">Confirme sua compra!</li>
                <li class="list-group-item">Produto: {{produto.nome}}</li>
                <li class="list-group-item">Valor Total: R${{pedido.valor_total}}</li>
                <li class="list-group-item">Endereço: 
                    <br>Rua Padre Matias, 71<br> Apt 403<br> CEP 36035-140 <br> Morro da Glória <br> Juiz de Fora - MG
                </li>
                <br>
                <div class="d-flex justify-content-center">
                    
                    <a href="/visualizarProduto/{{produto.id}}" class="btn btn-sm btn-primary mb-3 me-3">
                        <i class="bi bi-arrow-left"></i> 
                        Voltar
                    </a>
                    <a href="/realizarPedido/{{produto.id}}" class="btn btn-sm btn-success mb-3">
                        <i class="bi bi-cart"></i> 
                        Efetuar Compra 
                    </a>
                </div>
                
        </div>
    </div>
</div>

{% endblock %}

